<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->

//////////////////////////////////////////////////////////////////////////////////////

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar1</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle1</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowStyle1</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="OverflowStyle1">
        <item name="android:src">@drawable/secflow</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MyActionBar1" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#ffffff</item>
        <item name="actionBarSize">44dp</item>
        <item name="android:icon">@drawable/firsttitle</item>
    </style>

    <style name="MenuTextStyle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2e2165</item>
    </style>

</resources>
